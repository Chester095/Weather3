<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main.MainFragment">


    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".view.MainFragment">

        <TextView
            android:id="@+id/cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_city_name_margin_top"
            android:textColor="@color/teal_900"
            android:textSize="@dimen/city_name_text_size"
            android:textStyle="bold"
            tools:text="Москва" />

        <TextView
            android:id="@+id/cityCoordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_city_name_margin_top"
            android:textSize="@dimen/city_coordinates_text_size"
            android:textStyle="bold"
            tools:text="Координаты" />

        <TextView
            android:id="@+id/weatherCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/temperature_margin_top"
            android:textColor="@color/teal_700"
            android:textSize="@dimen/temperature_text_size"
            android:textStyle="bold"
            tools:text="Облачно" />

        <TextView
            android:id="@+id/temperatureLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/temperature_margin_top"
            android:text="@string/temperature_label_text"
            android:textColor="@color/teal_900"
            android:textSize="@dimen/temperature_text_size"
            android:textStyle="bold"
            tools:text="Температура" />

        <TextView
            android:id="@+id/temperatureValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_city_name_margin_top"
            android:textColor="@color/teal_700"
            android:textSize="@dimen/temperature_text_size"
            android:textStyle="bold"
            tools:text="-10" />

        <TextView
            android:id="@+id/feelsLikeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_city_name_margin_top"
            android:textColor="@color/teal_900"
            android:textSize="@dimen/temperature_text_size"
            android:textStyle="bold"
            android:text="@string/feels_like_label_text"
            tools:text="Ощущается как" />

        <TextView
            android:id="@+id/feelsLikeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/temperature_margin_top"
            android:textColor="@color/teal_700"
            android:textSize="@dimen/temperature_text_size"
            android:textStyle="bold"
            tools:text="10" />


    </LinearLayout>


</FrameLayout>