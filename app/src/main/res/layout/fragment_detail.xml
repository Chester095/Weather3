<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.MainFragment">


    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_200"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".view.MainFragment">

        <ImageView
            android:id="@+id/weatherImageView"
            android:layout_width="300dp"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_city_name_margin_top"
            android:textSize="@dimen/city_name_text_size"
            android:textStyle="bold"
            tools:text="Москва" />

        <TextView
            android:id="@+id/cityCoordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_city_name_margin_top"
            android:textSize="@dimen/city_coordinates_text_size"
            android:textStyle="bold"
            tools:text="213551355136 513513515135" />

        <TextView
            android:id="@+id/weatherCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/temperature_margin_top"
            android:textSize="@dimen/temperature_text_size"
            android:textStyle="bold"
            tools:text="Облачно" />

        <TextView
            android:id="@+id/temperatureLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/temperature_margin_top"
            android:text="Температура"
            android:textSize="@dimen/temperature_text_size"
            android:textStyle="bold"
            tools:text="Температура" />

        <TextView
            android:id="@+id/temperatureValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_city_name_margin_top"
            android:textSize="@dimen/temperature_text_size"
            android:textStyle="bold"
            tools:text="10" />

        <TextView
            android:id="@+id/feelsLikeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_city_name_margin_top"
            android:text="Ощущается"
            android:textSize="@dimen/temperature_text_size"
            android:textStyle="bold"
            tools:text="Москва" />

        <TextView
            android:id="@+id/feelsLikeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/temperature_margin_top"
            android:textSize="@dimen/temperature_text_size"
            android:textStyle="bold"
            tools:text="10" />


    </LinearLayout>


</FrameLayout>